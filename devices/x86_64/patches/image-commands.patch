+			date_name="openwrt-$(shell date +%m.%d.%Y)-x86-64-generic-ext4-combined-efi"; \
+		fi; \
+		qemu-img convert -f raw -O vmdk -o subformat=monolithicFlat $@ $${date_name}.vmdk && \
+		qemu-img convert -f raw -O vmdk -o subformat=monolithicFlat $@ $${date_name}-flat.vmdk; \
+		rm -f $@; \
+		zip -jm $@ $${date_name}.vmdk $${date_name}-flat.vmdk; \
+	else \
+		echo "WARNING: Install qemu-img to create VDI/VMDK images" >&2; exit 1; \
+	fi
